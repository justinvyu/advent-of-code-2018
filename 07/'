

if __name__ == "__main__":
    f = open("07.txt", "r")
    instructions_txt = f.read().splitlines()

    instruction_map = {}
    for instruction in instructions_txt:
        prereq, task = instruction.split(" ")[1], instruction.split(" ")[7]
        instruction_map[prereq] = instruction_map.get(prereq, []) + [task]
    for key in instruction_map:
        instruction_map[key] = sorted(instruction_map[key])

def find_possibilities(performed):
        poss = []
        for task in performed:
            poss += instr_map[task]
        poss = [x for x in poss if poss.count(x) == 1]
        return poss

def find_task_order(instr_map, first):
    # Y is the first
    order = first
    performed = [first]
    possibile = find_possibilities(performed)
    while possible:
        performed += [next_task]
        possible = find_possibilities(performed)
        next_task = min(possible)
    print(join)
